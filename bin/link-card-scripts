#!/usr/bin/env node
const fs = require("fs")

const sets = ["cota", "aoa"]
const houses = [
    "brobnar",
    "dis",
    "logos",
    "mars",
    "sanctum",
    "shadows",
    "untamed"
]

let output = "// THIS IS AN AUTOGENERATED FILE. DO NOT EDIT THIS FILE DIRECTLY."

sets.forEach(set => {
    houses.forEach(house => {
        const folder = `./src/card-scripts/${set}/${house}/`
        fs.readdirSync(folder).forEach(file => {
            if (file === ".DS_Store")
                return
            output += `\nimport "./${set}/${house}/${file}"`
        })
    })
})

fs.writeFileSync("./src/card-scripts/imports.ts", output)
